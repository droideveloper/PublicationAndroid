<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- RatioImageView style params -->
    <declare-styleable name="RatioImageView">
        <attr name="widthRatio"     format="float" />
        <attr name="heightRatio"    format="float" />
        <attr name="useMin"         format="boolean" />
    </declare-styleable>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="ThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ImgBtnNoInset" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/img_btn_inset</item>
        <item name="background">@drawable/img_btn_inset</item>
    </style>
</resources>