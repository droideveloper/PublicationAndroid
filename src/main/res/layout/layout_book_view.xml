<?xml version="1.0" encoding="utf-8"?>
<org.fs.publication.widget.Layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:library="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/default_space"
    android:padding="@dimen/default_space"
    android:background="@drawable/bg_book_view"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <org.fs.publication.widget.RatioImageView
        android:id="@+id/imgCover"
        library:heightRatio="1"
        library:widthRatio=".75"
        android:layout_gravity="center_vertical"
        library:useMin="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/img_height"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/default_space"
        android:layout_marginStart="@dimen/default_space"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextAppearance.StatusBar.EventContent.Title"
            android:id="@+id/txtTitle"
            android:textColor="#FF888888"
            android:layout_width="match_parent"
            android:lines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/TextAppearance.StatusBar.EventContent.Line2"
            android:id="@+id/txtInfo"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/min_space"
            android:textColor="#FF666666"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/TextAppearance.StatusBar.EventContent.Line2"
            android:id="@+id/txtDate"
            android:lines="1"
            android:gravity="end"
            android:layout_marginTop="@dimen/min_space"
            android:textColor="#FF666666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/vgProgress"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/min_space"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextAppearance.StatusBar.EventContent.Line2"
                android:id="@+id/txtPercentage"
                android:textColor="#FF666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/pgPercentage"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/min_space"
            android:gravity="end"
            android:layout_height="wrap_content">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/btnAction"
                android:text="@string/btn_download"
                android:layout_marginEnd="@dimen/default_space"
                android:layout_marginRight="@dimen/default_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/btnDelete"
                android:visibility="gone"
                android:text="@string/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</org.fs.publication.widget.Layout>